<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Blog</title>
        <link rel="stylesheet" href="/stylesheets/style.css"  />
    </head>
    <body>
        <!-- header -->
        <header>
            <h1><%= title %></h1>
        </header>

        <!-- navbar -->
        <nav>
            <span><a href="/" title="Homepage">Home</a></span>
            <% if (user) {%>
                <span><a href="/post">Post</a></span>
                <span><a href="/logout">Logout</a></span>
            <% } else { %>
                <span><a href="/login">Login</a></span>
                <span><a href="/reg">Regist</a></span>
            <% } %>
        </nav>

        <!-- article -->
        <article>
            <% if (success) { %>
                <div>
                    <%= success %>
                </div>
            <% } %>
            <% if (error) { %>
                <div>
                    <%= error %>
                </div>
            <% } %>
